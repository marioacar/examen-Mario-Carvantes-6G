                                Margin="20,17,350,20" 
                                HeightRequest="60" 
                                WidthRequest="150">

            </Image>

            <Frame CornerRadius="25" Margin="0,0,0,-20" BackgroundColor="#f8b732" HasShadow="False" HeightRequest="25" VerticalOptions="EndAndExpand"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Frame CornerRadius="10" HeightRequest="270" Margin="0,-80,0,0" WidthRequest="280" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
                <StackLayout>
                    <Frame  Margin="10" 
                            CornerRadius="50" 
                            WidthRequest="50" 
