                        </StackLayout>
                    </Frame>

                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Frame  Margin="1,0,0,0" 
                            CornerRadius="50" 
                            WidthRequest="20" 
                            HeightRequest="20"
                            HorizontalOptions="Start" >

