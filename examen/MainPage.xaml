                        <StackLayout Orientation="Horizontal">
                            <Frame  Margin="1,0,0,0" 
                            CornerRadius="50" 
                            WidthRequest="20" 
                            HeightRequest="20"
                            HorizontalOptions="Start" >

                                <Image  Source="https://www.seekpng.com/png/detail/57-576498_man-face-png-happy-people-face-png.png" 
                                Aspect="AspectFill" 
                                Margin="-21" 
                                HeightRequest="100" 
                                WidthRequest="100">

                                </Image>


                            </Frame>
                            <Label HorizontalOptions="Center" Text="Relationship Advice 26 Students" VerticalTextAlignment="Center" HeightRequest="0" WidthRequest="130"></Label>

                        </StackLayout>

                    </StackLayout>

                </StackLayout>
            </Frame>
            

