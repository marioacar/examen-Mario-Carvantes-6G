            </Frame>
            
        </StackLayout>

        <StackLayout>
            <Frame CornerRadius="10" HeightRequest="180" Margin="0,10,0,0" WidthRequest="280" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
